<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Node-RED Smart Home Control</title>

  <!-- Bootsrap Code -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <!-- Site-specific Code -->  
  <link href="/css/navbar.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/basic.css">
  <link rel="stylesheet" href="/css/countrySelect.css">
  <!-- Flag Sprite Code --> 
  <link  rel=stylesheet href="/css/flags.css" type="text/css">
  <!-- Octicons Code -->  
  <link rel="stylesheet" href="/octicons/build.css">
  <!-- Call JQuery as used in forms too early to be in footer-->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <!-- Country Select Code -->
  <script src="/js/countrySelect.min.js"></script>

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand notranslate" href="#">Node-RED Smart Home Control</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-label="Toggle Navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbar">
          <ul class="navbar-nav mr-auto">
                <li <% if (locals.home) {%>class="active"<% } %>><a class="nav-link" href="/">Home</a></li>
                <li <% if (locals.docs) {%>class="active"<% } %>><a class="nav-link" href="/docs">Documentation</a></li>
                <li <% if (locals.about) {%>class="active"<% } %>><a class="nav-link" href="/about">About</a></li>
                <li <% if (locals.privacy) {%>class="active"<% } %>><a class="nav-link" href="/privacy">Privacy Policy</a></li>
                <% if (user) { %>
                  <% if (user.superuser == 0) { %>
                    <li <% if (locals.acc) {%>class="active"<% } %>><a class="nav-link" href="/my-account">My Account</a></li>
                    <li <% if (locals.devs) {%>class="active"<% } %>><a class="nav-link" href="/devices">My Devices</a></li>
                  <% } %>
                <% } %>
                <% if (user) { %>
                  <!-- <li><a class="nav-link" href="/logout">Logout <%= user.username %></a></li> -->
                  <li><a class="nav-link" href="/logout">Logout</a></li>
                <% } else { %>
                  <li <% if (locals.login) {%>class="active"<% } %>><a class="nav-link" href="/login">Login</a></li>
                  <li <% if (locals.newuser) {%>class="active"<% } %>><a class="nav-link" href="/newuser">Register</a></li>
                <% } %>
                <% if (user) { %>
                  <% if (user.superuser) { %>
                  <div class="dropdown">
                      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Manage
                      </button>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                         <a class="dropdown-item" href="/admin/services">OAuth Services</a>
                         <a class="dropdown-item" href="/admin/users">All Users</a>
                         <a class="dropdown-item" href="/admin/user-devices">All Devices</a>
                      </div>
                  </div>
                  <% } %>
                <% } %>
          </ul>
          <div id="google_translate_element" style="text-align: right;"></div>
        </div>
      </nav>
  <!-- <div class="container main"> -->